                                        <input type="text" class="form-control" placeholder="<%= account.name %>" disabled>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text w-25" id="basic-addon1"><i class="me-2 fa-solid fa-address-card text-secondary"></i>CMND/CCCD</span>
                                        <input type="text" class="form-control" placeholder="<%= account.citizen_id_card %>" disabled>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text w-25" id="basic-addon1"><i class="me-2 fa-solid fa-cake-candles text-secondary"></i>Ngày sinh</span>
                                        <input type="text" class="form-control" placeholder="<%= account.day_of_birth %>" disabled>
