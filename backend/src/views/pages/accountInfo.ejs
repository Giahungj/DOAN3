                                        <input type="text" class="form-control" placeholder="<%= account.gender %>" disabled>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text w-25" id="basic-addon1"><i class="me-2 fa-solid fa-circle text-secondary"></i>Vai trò</span>
                                        <input type="text" class="form-control" placeholder="<%= account.role %>" disabled>
